package aula7;

import javax.swing.JOptionPane;

public class OperacaoBancaria {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Conta destino = new Conta();
		Conta origem = new Conta();
		
		destino.titular = JOptionPane.showInputDialog("Digite o nome do destinatario:");
		
		destino.sNumero = JOptionPane.showInputDialog("Digite o número da conta do destinatario:");
		destino.numero = Integer.parseInt(destino.sNumero);
		
		destino.sSaldo = JOptionPane.showInputDialog("Digite o saldo da conta do destinatario:");
		destino.saldo = Double.parseDouble(destino.sSaldo);
		
		destino.sLimite = JOptionPane.showInputDialog("Digite o limite do destinatario:");
		destino.limite = Double.parseDouble(destino.sLimite);
		
		JOptionPane.showMessageDialog(null, "O saldo da conta de " + destino.titular + ", é de: " + destino.saldo);
		
		origem.titular = JOptionPane.showInputDialog("Digite o nome do remetente:");
		
		origem.sNumero = JOptionPane.showInputDialog("Digite o número da conta do destinatario:");
		origem.numero = Integer.parseInt(origem.sNumero);
		
		origem.sSaldo = JOptionPane.showInputDialog("Digite o saldo da conta do destinatario:");
		origem.saldo = Double.parseDouble(origem.sSaldo);
		
		origem.sLimite = JOptionPane.showInputDialog("Digite o limite do destinatario:");
		origem.limite = Double.parseDouble(origem.sLimite);

	}

}
