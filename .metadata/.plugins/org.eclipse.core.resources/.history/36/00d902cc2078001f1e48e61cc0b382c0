package aula7;

import javax.swing.JOptionPane;

public class TesteDaConta {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Conta minhaConta;
		minhaConta = new Conta();
		
		JOptionPane.showInputDialog("Digite o seu nome:", minhaConta.titular);
		
		JOptionPane.showInputDialog("Digite o número da sua conta:", minhaConta.sNumero);
		minhaConta.numero = Integer.parseInt(minhaConta.sNumero);
		
		JOptionPane.showInputDialog("Digite o seu saldo:", minhaConta.sSaldo);
		minhaConta.saldo = Double.parseDouble(minhaConta.sSaldo);
		
		JOptionPane.showInputDialog("Digite o limite para gastar:", minhaConta.sLimite);
		minhaConta.limite = Double.parseDouble(minhaConta.sLimite);
		
		JOptionPane.showMessageDialog(null, "O saldo da conta é: " + minhaConta.saldo);
		
		JOptionPane.showInputDialog("Quanto você quer sacar?", minhaConta.sQuantidade);
		minhaConta.quantidade = Double.parseDouble(minhaConta.sQuantidade);
		minhaConta.saca(minhaConta.quantidade);
		
		JOptionPane.showInputDialog("Quanto você quer depositar?", minhaConta.sQuantidade);
		minhaConta.quantidade = Double.parseDouble(minhaConta.sQuantidade);
		minhaConta.deposito(minhaConta.quantidade);
		
		JOptionPane.showMessageDialog(null, "Depois das operações, o saldo da conta é: " + minhaConta.saldo);
		
	}

}
